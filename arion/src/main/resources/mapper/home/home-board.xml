	<select id="selectQnATotalCount" resultType="int">
    	SELECT COUNT(*)
    	FROM qna
    	WHERE 1 = 1
    	<if test="searchType != null and searchType != ''">
        	<if test="searchType == 'title'">
            	AND qna_title LIKE '%' || #{keyword} || '%'
